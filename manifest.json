{
  "name": "KrispyChicken",
  "description": "A browser action with a popup that adds krispy chicken everywhere.",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "background": { "page": "popup.html" },
  "web_accessible_resources": ["chicken.png"],
  "browser_action": {
      "default_title": "Let's get crazy with chickens.",
      "default_icon": "chicken.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
